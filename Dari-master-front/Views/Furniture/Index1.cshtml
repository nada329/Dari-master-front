@model IEnumerable<Dari_master_front.Models.FurnitureModel>
@{
    Layout = "~/Views/Shared/_Layout_BackOffice.cshtml";
}
<p>
    @Html.ActionLink("Create New", "Create1")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.libelle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.postDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.libelle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.postDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit1", new { id = item.id }) |
                @Html.ActionLink("Details", "Details1", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete1", new { id = item.id })
            </td>
        </tr>
    }

</table>
